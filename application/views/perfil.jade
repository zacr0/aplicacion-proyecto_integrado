extends layout

block title
  title SocialGCap - Perfil

block custom-styles
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container
    nav(role="navigation").navbar.navbar-default.navbar-fixed-top
      div.container
        .navbar-header
          button(type="button", data-toggle="collapse", 
            data-target="#navbar-collapse").navbar-toggle
            span.sr-only Mostrar navegación
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href="#").navbar-brand SocialGCap
        .collapse.navbar-collapse(id="navbar-collapse")
          ul.nav.navbar-nav
            li
              a(href="/salas") Salas
            li
              a(href="/anuncios") Anuncios
            li
              a(href="/usuarios") Usuarios
          ul.nav.navbar-nav.navbar-right
            li
              a(href="/perfil/" + usuario)= 'Usuario: ' + usuario
            li
              a(href="logout").btn.btn-danger Cerrar sesión
    p
    - if ( datosUsuario ) {
          p #{datosUsuario.usuario}
          br
          p #{datosUsuario.nombre} #{datosUsuario.apellidos}
          br
          p #{datosUsuario.email}
          br
          p #{datosUsuario.fechaNacimiento}
          br
          p #{datosUsuario.perfil}
      - }

  block custom-scripts