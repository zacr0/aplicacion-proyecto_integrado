extends layout

block title
  title SocialGCap - Perfil

block custom-styles
  link(rel='stylesheet', href='/stylesheets/style.css')

block content
  .container
    - var activo = 'perfil';
    include navbar
    
    p
    - if ( datosUsuario ) {
          p #{datosUsuario.usuario}
          br
          p #{datosUsuario.nombre} #{datosUsuario.apellidos}
          br
          p #{datosUsuario.email}
          br
          p #{datosUsuario.fechaNacimiento}
          br
          p #{datosUsuario.perfil}
      - }

  block custom-scripts