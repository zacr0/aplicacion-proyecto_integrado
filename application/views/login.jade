extends layout

block content
  .container
    .container
      .row
        .col-md-12
          .col-md-offset-3.col-md-6
            .well
              h1.text-center 
                | Inicia sesión o 
                a(href='/registro') regístrate
              form.form-horizontal
                fieldset
                  legend Conectar con... --- #{name}
                  img(src='', alt='Facebook')
                  img(src='', alt='LinkedIn')
                  img(src='', alt='Google+')
                  legend O entra normalmente
                  .form-group
                    label(for="usuario").col-md-2.control-label
                      strong Usuario:
                    .col-md-10
                      input.form-control(id='usuario', placeholder='Usuario', type='text')
                  .form-group
                    label(for="pass").col-md-2.control-label
                      strong Contraseña:
                    .col-md-10
                      input.form-control(id='pass', placeholder='Contraseña', type='password')
                  .form-group
                    .col-md-10.col-md-offset-2
                      button(type='submit').btn.btn-block.btn-success Entrar

